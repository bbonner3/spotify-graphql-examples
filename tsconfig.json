{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "examples/*.ts"
  ]
}
